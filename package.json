{
  "name": "electron-demo",
  "version": "1.0.0",
  "description": "Electron demo app -- Photo Gallery",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Tutorial App\"",    
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=cons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisH404/electron-demo.git"
  },
  "author": "chris huang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ChrisH404/electron-demo/issues"
  },
  "homepage": "https://github.com/ChrisH404/electron-demo#readme",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-packager": "^11.2.0"
  }
}
